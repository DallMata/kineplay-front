---
// Header.astro
import Card from './Card.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header>
  <div class="header-container">
    <ul role="list" class="link-card-grid">
      <Card
            href="pacients"
            title="Pacientes"
            body=""
            imageSrc="paciente.png"
        />
        <Card
            href="/spaceEvationPlays"
            title="Space Evation"
            body=""
            imageSrc="cohete.png"
        />
        
        <Card
            href="account"
            title="Cuenta"
            body=""
            imageSrc="usuarios.png"
        />
    </ul>
  </div>
</header>

<style>
  .header-container {
    background-color: #03A1CF;
    color: white;
    width: 100%;
    height: 60;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .link-card-grid {
    
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Crea columnas que se ajustan automáticamente */
    width: 100%;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  /* Estilo de cada card */
  .link-card-grid li {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #03A1CF;
    color: white;
    text-align: center;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .link-card-grid {
      grid-template-columns: 1fr; /* En pantallas pequeñas, cada card toma el ancho completo */
    }
  }
</style>
